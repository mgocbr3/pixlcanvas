# Server
PORT=8787
CORS_ORIGIN=http://localhost:3487

# Supabase
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=

# Local dev auth convenience (DO NOT enable in production)
# When enabled, protected routes accept requests without Authorization.
PIXLLAND_DEV_AUTH_BYPASS=0
# Use a real Supabase user id (auth.users.id) to scope ownership in dev.
PIXLLAND_DEV_USER_ID=anonymous

# Optional: auto-append token on initial page load (useful in VS Code Simple Browser)
# PIXLLAND_EDITOR_ACCESS_TOKEN=

# Default skybox for new scenes (Supabase required)
PIXLLAND_DEFAULT_SKYBOX=1

# Optional: storage bucket names
SUPABASE_ASSETS_BUCKET=assets
SUPABASE_PROJECTS_BUCKET=projects

# Editor config URLs
PIXLLAND_API_URL=http://localhost:8787
PIXLLAND_HOME_URL=http://localhost:8787
PIXLLAND_FRONTEND_URL=http://localhost:3487/
PIXLLAND_STATIC_URL=http://localhost:3487/
PIXLLAND_IMAGES_URL=http://localhost:8787
PIXLLAND_ENGINE_URL=http://localhost:3487/playcanvas.js
PIXLLAND_REALTIME_HTTP=http://localhost:3001
PIXLLAND_RELAY_WS=ws://localhost:3002
PIXLLAND_MESSENGER_WS=ws://localhost:3003

# Upload limits and disk allowance
UPLOAD_MAX_BYTES=524288000
PIXLLAND_DISK_ALLOWANCE_BYTES=1073741824
PIXLLAND_DISK_USED_BYTES=0
